<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graeme.beamitup.CreateTransferActivity">

    <EditText
        android:id="@+id/edittext_transfer_money_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_transfer_money_reason"
        android:layout_gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:layout_marginTop="91dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_transfer_money_amount"
        android:layout_marginLeft="71dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edittext_transfer_money_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_transfer_money_amount"
        android:layout_gravity="center_horizontal"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="142dp"
        android:layout_marginLeft="71dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_ready_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_button_set_amount"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_transfer_money_reason"
        android:layout_marginLeft="106dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
