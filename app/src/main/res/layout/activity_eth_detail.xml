<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".eth.EthDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_eth_nickname"
            android:layout_margin="16dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_margin="16dp"
            android:text="@string/et_eth_nickname"
            android:id="@+id/et_eth_nickname"/>

    </LinearLayout>

    <fragment
        android:layout_gravity="center"
        android:name="com.example.graeme.beamitup.QRCodeDisplayFragment"
        android:id="@+id/frag_qrcode_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_qrcode_display"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_save_eth"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:id="@+id/btn_save_eth"/>

</LinearLayout>