<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.graeme.beamitup">

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".account.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".transfer.CreateTransferActivity"
            android:label="@string/title_activity_transfer_money"
            android:parentActivityName=".transfer.LandingPageActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.graeme.beamitup.transfer.LandingPageActivity" />
        </activity>
        <activity
            android:name=".transfer.ReadyTransferActivity"
            android:label="@string/title_activity_ready_transfer"
            android:parentActivityName=".transfer.CreateTransferActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.graeme.beamitup.transfer.CreateTransferActivity" />
        </activity>
        <activity
            android:name=".transfer.ReplyTransferActivity"
            android:label="@string/title_activity_reply_transfer"
            android:parentActivityName=".transfer.LandingPageActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.graeme.beamitup.transfer.LandingPageActivity" />
        </activity>
        <activity
            android:name=".transfer.FinishTransferActivity"
            android:label="@string/title_activity_finish_transfer"
            android:parentActivityName=".transfer.LandingPageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="application/com.example.graeme.beamitup/reply_transfer" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.graeme.beamitup.transfer.LandingPageActivity" />
        </activity>
        <activity
            android:name=".account.CreateAccountActivity"
            android:label="@string/title_activity_create_account"
            android:parentActivityName=".account.LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.graeme.beamitup.account.LoginActivity" />
        </activity>
        <activity
            android:name=".transfer.LandingPageActivity"
            android:label="@string/title_activity_landing_page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".eth.AddEthActivity"
            android:label="@string/title_activity_add_eth"
            android:screenOrientation="portrait" />
        <activity
            android:name=".transfer.ReceiveTransferActivity"
            android:label="@string/title_activity_receive_transfer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".account.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".transfer.CreateReplyTransferActivity"
            android:label="@string/title_activity_create_reply_transfer"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="application/com.example.graeme.beamitup/ready_transfer" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".request.CreateRequestActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_create_request" />
        <activity
            android:name=".request.ReadyRequestActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_ready_request" />
        <activity
            android:name=".request.ReceiveRequestActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_receive_request" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="com.example.graeme.beamitup/request" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".request.FinishRequestActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_finish_request" />
    </application>

</manifest>