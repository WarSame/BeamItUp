<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.graeme.beamitup">

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BeamItUp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".LandingPageActivity"
            android:label="@string/title_activity_landing_page"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".eth.AddEthActivity"
            android:label="@string/title_activity_add_eth"
            android:screenOrientation="portrait" />
        <activity
            android:name=".request.CreateRequestActivity"
            android:label="@string/title_activity_create_request"
            android:parentActivityName=".LandingPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".request.ReadyRequestActivity"
            android:label="@string/title_activity_ready_request"
            android:parentActivityName=".LandingPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".request.ReceiveRequestActivity"
            android:label="@string/title_activity_receive_request"
            android:parentActivityName=".LandingPageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="com.example.graeme.beamitup/request" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".request.FinishRequestActivity"
            android:label="@string/title_activity_finish_request"
            android:parentActivityName=".LandingPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".eth.EthListActivity"
            android:label="@string/title_activity_eth"
            android:parentActivityName=".LandingPageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.graeme.beamitup.LandingPageActivity" />
        </activity>
        <activity
            android:name=".eth.EthDetailActivity"
            android:label="@string/title_activity_eth_detail"
            android:parentActivityName=".eth.EthListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.graeme.beamitup.eth.EthListActivity" />
        </activity>

        <service android:name=".eth_tasks.GenerateWalletService" />
    </application>

</manifest>